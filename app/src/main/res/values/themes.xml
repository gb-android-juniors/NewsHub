<resources>
    <!-- Base application theme. -->
    <style name="Theme.NewsGB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--floatingActionButton-->
        <item name="floatingActionButtonStyle">@style/AppFabStyle</item>
    </style>

    <style name="Theme.NewsGB.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_icon_splash_v</item>
        <item name="postSplashScreenTheme">@style/Theme.NewsGB</item>
    </style>

    <style name="NewsCategoryLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/app_background_color</item>
        <item name="android:textColor">@color/category_button_text_color</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <style name="NewsCategoryTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/default_half_margin</item>
    </style>

    <style name="NewsCategoryCardImageStyle">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="CustomTabStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/category_button_text_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SmartAppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

